{
    "template": "ipstats-*",
    "settings": {
        "index.refresh_interval": "5s"
    },
    "mappings": {
        "_doc": {
            "properties": {
                "src_ip": {
                    "type": "keyword"
                },
                "dest_ip": {
                    "type": "keyword"
                },
                "flows": {
                    "type": "long"
                },
                "packets": {
                    "type": "long"
                },
                "bytes": {
                    "type": "long"
                }
            }
        }
    }
}