input {
    udp{
        port => "4739"
        codec => "netflow"
        tags => "netflow_input"
    }

    udp{
        port => "21561"
        codec => "json"
        tags => "src_ip_stats"
    }

    udp{
        port => "21562"
        codec => "json"
        tags => "dest_ip_stats"
    }
}

filter {
    mutate {
        add_field  => { "create_time" => "%{@timestamp}" }
    }
}

output{
    stdout{
        codec => rubydebug
    }

    if "netflow_input" in [tags] {
        elasticsearch{
            hosts => "http://es1:9200"
            index => "netflow-%{+YYYY.MM.dd}"
            document_type => "_doc"
            codec => "json"
            template => "/usr/share/logstash/templates/logstash_netflow_tpl.json"
        }

         kafka{
            topic_id => "mnet"
            bootstrap_servers  => "kf1:9092,kf2:9092"
            codec => "json"
        }
    }

    if "src_ip_stats" in [tags] {
        elasticsearch {
            hosts => "http://es1:9200"
            index => "ipstats-%{+YYYY.MM.dd}"
            document_type => "_doc"
            codec => "json"
            template => "/usr/share/logstash/templates/logstash_ipstats_tpl.json"
        }
    }
}