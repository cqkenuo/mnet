#
# docker build -t spark-client -f Dockerfile-spark-client .
#
FROM spark-base:latest

ENV PROJECT_HOME=/proj

RUN mkdir ${PROJECT_HOME}
WORKDIR ${PROJECT_HOME}

COPY spark-client.py client.py

CMD ${SPARK_HOME}/bin/spark-submit --jars ${PROJECT_HOME}/jars/spark-streaming-kafka-0-8-assembly_2.11-2.4.3.jar ${PROJECT_HOME}/client.py